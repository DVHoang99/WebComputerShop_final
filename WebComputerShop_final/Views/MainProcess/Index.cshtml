@{
    Layout = null;
}
@model IEnumerable<WebComputerShop_final.Models.InfoProduct>
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<style type="text/css">
    body {
        font-family: Arial, Tahoma;
        font-size: 12px;
    }



    #main {

        padding: 0;
        margin-left: auto;
        margin-right: auto;
    }

    #head {
        height: 100px;
        background-color: #F5F5F5;
        border: 1px solid #CDCDCD;
        margin-bottom: 5px;
    }

    #head-link {
        height: 30px;
        line-height: 30px;
        padding-left: 10px;
        padding-right: 10px;
        border: 1px solid #CDCDCD;
        background-color: #F5F5F5;
        margin-bottom: 5px;
        clear: both;
    }
    #content{
        border: 1px solid #CDCDCD;
    }
    #footer {
        height: 50px;
        clear: both;
        border: 1px solid #CDCDCD;
        background-color: #F8F8FF;
    }
</style>
<body class="container-fluid">

    <div id="main">
        <div id="head">

        </div>

        <div id="head-link">
            <buttons style="border: none;" type="button" data-toggle="modal" data-target="#myModal">Thêm sản phẩm</buttons>
        </div>


        <div id="content">
            <div class="container">
                <div class="row">

                    @foreach (var i in Model)
                    {

                        <div class="col-md-3" style="margin: 5px;">
                            <div class="info">
                                @i.Name
                            </div>
                            @foreach (var i2 in i.IMGs)
                            {
                                <div class="info">
                                    <img src="@i2.IMGPath" alt="Alternate Text" style="width: 100px" ; height="100px;" />
                                </div>
                            }
                            <div class="info">
                                @i.Price
                            </div>
                            <div class="info">
                                @i.Description
                            </div>
                            <a class="btn btn-danger UpdateButton" href="/MainProcess/Delete?id=@i.Id">Xóa</a>
                        </div>
                    }

                </div>

            </div>
            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Modal Header</h4>
                        </div>

                        <div class="form-group">
                            <label>Nhập tên sản phẩm</label>
                            <input class="form-control" name="Name" placeholder="Tên sản phẩm" id="themTen">
                        </div>
                        <div class="form-group">
                            <label>Giá</label>
                            <input class="form-control" name="price" placeholder="Tên sản phẩm" id="gia">
                        </div>
                        <div class="form-group">
                            <label>Mô tả</label>
                            <input class="form-control" name="description" placeholder="Tên sản phẩm" id="mota">
                        </div>

                        <div class="modal-footer">
                            <button id="AddProductJSon" type="submit" class="btn btn-default">Thêm </button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                        </div>
                        <script>
                            $("#AddProductJSon").on("click", function () {
                                let thisbtn = $(this);
                                let name = document.getElementById("themTen").value;
                                let gia = document.getElementById("gia").value;
                                let mota = document.getElementById("mota").value;
                                //let fileImg = document.getElementById("fileImg").files[0];
                                //var file = $("#fileImg")[0].files[0];
                                var formData = new FormData();
                                //formData.append('fileImg', $('#themFileImg')[0].files[0]);
                                formData.append('Name', name);
                                formData.append('price', gia);
                                formData.append('description', mota);
                                //console.log(file);
                                $.ajax({
                                    url: "/MainProcess/ThemSPJson",
                                    type: "POST",

                                    processData: false,
                                    contentType: false,
                                    data: formData,
                                    success: function (data) {
                                        if (data) {
                                            alert("jklfhgkiudhuirfghl");
                                        }
                                        else
                                            alert("Không thể sửa dữ liệu");
                                        window.location.reload();
                                    }
                                })
                            })
                        </script>
                    </div>

                </div>

            </div>
        </div>
        </div>
        <div id="footer">

        </div>

    </div>

    </div>

</body>
</html>